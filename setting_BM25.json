{
    "settings" : {
	"analysis" : {
	    "analyzer" : {
		"my_bm25_analyzer" : {
		    "tokenizer" : "standard",
		    "filter" : ["lowercase", "baseform", "unique"]

		}
	    },
	    "filter": {
		"baseform": {
		    "type": "baseform",
		    "name": "en"
		}
	    }
	}
    },
    "mappings":{
	"article":{
            "properties":{
		"pmcid":{
		    "type":"string"
		},
		"title":{
		    "analyzer":"my_bm25_analyzer",
		    "type":"string",
		    "similarity": "BM25"

		},
		"abstract":{
		    "analyzer":"my_bm25_analyzer",
		    "type":"string",
		    "similarity": "BM25"
		},
		"body":{
		    "analyzer":"my_bm25_analyzer",
		    "type":"string",
		    "similarity": "BM25"
		}
            }
	}
    }
}
